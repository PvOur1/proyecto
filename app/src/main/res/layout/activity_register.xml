<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Blanco"
    android:fillViewport="true"
    tools:context=".activities.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center">

        <!-- LOGO DE LA APP -->
        <ImageView
            android:id="@+id/logoApp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logomototracer" />

        <!-- NOMBRE DE LA APP -->
        <TextView
            android:id="@+id/txtNombreApp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/Negro"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- MENSAJE INSTRUCTIVO -->
        <TextView
            android:id="@+id/txtMensajeInstructivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:text="Completa el formulario para registrarte"
            android:textColor="@color/Negro"
            android:textSize="16sp" />

        <!-- INPUT: NOMBRES -->
        <EditText
            android:id="@+id/edtNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:padding="10dp"/>

        <!-- INPUT: APELLIDOS -->
        <EditText
            android:id="@+id/edtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:padding="10dp"/>

        <!-- INPUT: EDAD -->
        <EditText
            android:id="@+id/edtEdad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Edad"
            android:inputType="number"
            android:padding="10dp"/>

        <!-- INPUT: TELÉFONO -->
        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:padding="10dp"/>

        <!-- INPUT: CORREO ELECTRÓNICO -->
        <EditText
            android:id="@+id/edtCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Correo Electrónico"
            android:inputType="textEmailAddress"
            android:padding="10dp"/>

        <!-- INPUT: DIRECCIÓN -->
        <EditText
            android:id="@+id/edtDireccion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Dirección"
            android:inputType="textPostalAddress"
            android:padding="10dp"/>

        <!-- INPUT: ROL -->
        <EditText
            android:id="@+id/edtRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rol"
            android:inputType="text"
            android:padding="10dp"/>

        <!-- INPUT: CONTRASEÑA -->
        <EditText
            android:id="@+id/edtContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"/>

        <!-- INPUT: REPETIR CONTRASEÑA -->
        <EditText
            android:id="@+id/edtRepetirContrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Repetir Contraseña"
            android:inputType="textPassword"
            android:padding="10dp"/>

        <!-- CHECKBOX: ACEPTAR TÉRMINOS -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/chkTerminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:text=""
                android:textColor="@color/Blanco" />

            <TextView
                android:id="@+id/txtTerminos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="2dp"
                android:text="Términos y condiciones"
                android:textColor="@color/azul_claro_parcial"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- BOTÓN DE REGISTRO -->
        <Button
            android:id="@+id/btnRegistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/boton_redondeado_parcial"
            android:padding="10dp"
            android:text="Registrarme"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
        <Button
            android:id="@+id/btnvolver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/boton_redondeado_parcial"
            android:padding="10dp"
            android:text="Volver"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>
</ScrollView>
