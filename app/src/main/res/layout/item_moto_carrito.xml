<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imgMoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:contentDescription="desc"
        android:layout_marginEnd="24dp"
        android:clipToOutline="true"
        android:background="@drawable/rounded_image_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvModelo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Yamaha R1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@id/imgMoto"
        app:layout_constraintTop_toTopOf="@id/imgMoto"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTipoMotor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4 tiempos · 998cc"
        android:textSize="14sp"
        android:textColor="#616161"
        android:fontFamily="sans-serif"
        android:layout_marginTop="6dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tvModelo"
        app:layout_constraintTop_toBottomOf="@id/tvModelo"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvAnioPrecio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2023 · $12,000"
        android:textSize="14sp"
        android:textColor="#616161"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@id/tvModelo"
        app:layout_constraintTop_toBottomOf="@id/tvTipoMotor"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
